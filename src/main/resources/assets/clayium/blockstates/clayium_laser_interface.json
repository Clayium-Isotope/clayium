{
  "multipart": [
    {
      "apply": {
        "model": "clayium:machine_hull_7"
      }
    },
    {
      "when": {
        "facing": "down"
      },
      "apply": {
        "model": "clayium:machine/laser_interface",
        "x": 90
      }
    },
    {
      "when": {
        "facing": "up"
      },
      "apply": {
        "model": "clayium:machine/laser_interface",
        "x": -90
      }
    },
    {
      "when": {
        "facing": "north"
      },
      "apply": {
        "model": "clayium:machine/laser_interface",
        "y": 0
      }
    },
    {
      "when": {
        "facing": "south"
      },
      "apply": {
        "model": "clayium:machine/laser_interface",
        "y": 180
      }
    },
    {
      "when": {
        "facing": "west"
      },
      "apply": {
        "model": "clayium:machine/laser_interface",
        "y": -90
      }
    },
    {
      "when": {
        "facing": "east"
      },
      "apply": {
        "model": "clayium:machine/laser_interface",
        "y": 90
      }
    }
  ]
}